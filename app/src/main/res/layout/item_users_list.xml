<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="5dp"
        app:cardElevation="3dp"
        app:contentPadding="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/itemUsersContactImageIV"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/man_example"
                android:layout_margin="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemUsersContactNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Иван Иванов"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normalText"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:id="@+id/itemUsersContactEmailTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLength="20"
                    android:paddingTop="3dp"
                    android:text="ivanov@mail.ru"
                    android:textColor="#C4000000"
                    android:textSize="@dimen/smallText"
                    android:textStyle="normal" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>