<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.auth.RecoverPasswordFragment">

    <ImageView
        android:id="@+id/recoverFragmentImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/icon_recover_password"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/recoverFragmentTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recover_fragment_title_text"
        android:textSize="@dimen/normalText"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/recoverFragmentImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/recoverFragmentSubTitleText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/recover_fragment_subtitle_text"
        android:textColor="@color/hintColorGray"
        app:layout_constraintTop_toBottomOf="@id/recoverFragmentTitleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.01"/>

    <EditText
        android:id="@+id/recoverFragmentEmailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recover_fragment_email_field_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:minHeight="48dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recoverFragmentSubTitleText"
        app:layout_constraintVertical_bias="0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/recoverFragmentSendEmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recover_fragment_send_button_text"
        app:icon="@drawable/ic_send_white_24"
        app:layout_constraintTop_toBottomOf="@id/recoverFragmentEmailField"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>